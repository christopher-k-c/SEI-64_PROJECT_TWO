<div class="container-fluid px-4 mt-4">

        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/supplier/index" class="text-dark">Dashboard</a></li>
            <li class="breadcrumb-item active">Supplier / Add New </li>
        </ol>

    <div class="card mb-4">
        <div class="card-body">

        <!-- Supplier form -->

            <div class="card-header"><h3 class="text-center font-weight-light my-4">New Supplier</h3></div>
                <div class="card-body">
            
                    <form method="POST" action="/supplier/add">
            
                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputName" type="text" name="name" placeholder="Name" />
                            <label for="inputName">Supplier Name</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputPhone" type="text" name="phoneNumber" placeholder="Phone Number" />
                            <label for="inputPhone">Phone Number</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputAddress" type="text" name="address" placeholder="Address" />
                            <label for="inputAddress">Address</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputEmail" type="email" name="email" placeholder="Email" />
                            <label for="inputEmail">Email</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputWebsite" type="url" name="address" placeholder="https://" />
                            <label for="inputWebsite">Website</label>
                        </div>       
                
                        <div class="form-floating mb-3">
                            <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
                              <option selected>Select here</option>
                              <option value="true">Yes</option>
                              <option value="false">No</option>                              
                            </select>
                            <label for="floatingSelect">Current trading?</label>
                          </div>

                        <div class="form-floating mb-3">
                            <textarea class="form-control" id="inputDescription" rows="6" name="description" placeholder="Description"></textarea>
                            <label for="inputDescription">Description</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputWebsite" type="hidden" name="author" value="<%= currentUser %>" />
        
                        </div>
            
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <button class="btn btn-primary" type="submit">Create Supplier</button>
                        </div>
            
                    </form>
                </div>
    
    
    
    
    
            </div>
        </div>
    <div style="height: 100vh"></div>
</div>






<form method="POST" action="/supplier/add">
    
    <h2> Add new supplier </h2>
    
    <div class="row mb-3">
        <label>Name</label>
        <input type="text" name="name"/>
    </div>

    <div class="row mb-3">
        <label>Phone Number</label>
        <input type="text" name="phoneNumber"/>
    </div>

    <div class="row mb-3">
        <label>Address</label>
        <input type="text" name="address"/>
    </div>

    <div class="row mb-3">
        <label>Email Address</label>
        <input type="text" name="email"/>
    </div>

    <div class="row mb-3">
        <label>Website</label>
        <input type="text" name="website"/>
    </div>

    <div class="row mb-3">
        <label>Trading</label>

        <select name="trading" class="form-control">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>

    </div>

    <div class="row mb-3">
        <label>Description</label>
        <textarea name="description" rows="6"></textarea>
    </div>

    
    
    <div class="row mb-3">
        <label>Your name or ID</label>
        <input type="text" name="author"/>
    </div>

    <button type="submit" class="btn btn-danger btn-lg">Create Supplier</button>

</form>