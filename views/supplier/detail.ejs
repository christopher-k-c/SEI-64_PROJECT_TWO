<div class="container-fluid px-4 mt-4">

    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/product/index" class="text-dark">Dashboard</a></li>
        <li class="breadcrumb-item active">Supplier Detail: <%= supplier.name %> </li>
    </ol>
<div class="card mb-4">
    <div class="card-body">

<div>
    <div>
        <h3><%= supplier.name %></h3>
    </div>
    <div>Phone Number: <%= supplier.phoneNumber %> </div>
    <div>Address: <%= supplier.address %> </div>
    <div>Description: <%= supplier.description %> </div>
    <div>Email: <%= supplier.email %> </div>
    <div>Website: <a href="<%= supplier.website %>"></a> <%= supplier.website %> </div>
    
    <div>Created At: <%= moment(supplier.createdAt).format('LLLL') %> </div>
    <div>Updated At: <%= moment(supplier.updatedAt).calendar() %> </div>
    
    <br>

    <!-- Product available  -->

    <% supplier.product.forEach(function(product) { %>
        <hr>
        <div>
            product: <%= product.name %>
        </div>
        <div>
            Quantity: <%= product.quantity %>
        </div>
        <%  }) %>

</div>