<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ICS Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
</head>
<body>

    <% if(alerts.success) { %>

        <% alerts.success.forEach(function(msg) { %>

        <div class="alert alert-success">
            <%= msg %>
        </div>
        
        <% }) %>
    
    <% } %> 


    <% if(alerts.error) { %>

        <% alerts.error.forEach(function(msg) { %>

        <div class="alert alert-danger">
            <%= msg %>
        </div>
        <% }) %>
    
    <% } %> 
     
    
    <nav>

        <!-- Index Navigation links -->
        <a href="/">Home</a>

        <!-- Product Navigation Links -->
        <a href="/product/index" class="btn btn-dark">Product Home</a>
        <a href="/product/add" class="btn btn-dark">Product Add</a>
        <!-- <a href="/product/detail" class="btn btn-dark">Product Detail</a>
        <a href="/product/edit" class="btn btn-dark">Product Edit</a> ---- TO BE REMOVED --> 

        <!-- Supplier Navigation Links -->
        <a href="/supplier/index" class="btn btn-dark">Supplier Home</a>
        <a href="/supplier/add" class="btn btn-dark">Supplier Add</a>
        <!-- <a href="/supplier/detail" class="btn btn-dark">Supplier Detail</a>
        <a href="/supplier/edit" class="btn btn-dark">Supplier Edit</a> ---- TO BE REMOVED -->
        
        <!-- Auth Navigation Links -->  
        <% if(currentUser) { %>
            Hi <%= currentUser.firstName %>
            <a href="/auth/logout" class="btn btn-dark">Log Out</a>
            <a href="/profile/index" class="btn btn-dark">Profile Page</a>
        <% } else { %>
            <a href="/auth/signup" class="btn btn-dark">Sign Up</a>
            <a href="/auth/signin" class="btn btn-dark">Sign In</a>
        <% } %>

        <!-- Hides all user profiles from guest and junior level users -->
        <% if(!currentUser) { %>

            <% } else if (currentUser.level == "admin"){ %> 

            <a href="/profile/users" class="btn btn-danger">User Database</a>
    
        <% } %>

    </nav>

<%- body %>









<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script src="/script/main.js"></script>
</body>
</html>