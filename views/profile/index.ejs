





<h2> User Credentials </h2>

<br>

<a href="/profile/edit">Update your Credentials</a>

<br>
<table>

    <tr>
        <th>First Name: </th>
        <td><%= currentUser.firstName %> </td>   
    </tr>
    <tr>
        <th>Last Name: </th>
        <td><%= currentUser.lastName %></td>
    </tr>
    <tr>
        <th>Job Title: </th>
        <td><%= currentUser.jobTitle %></td>
    </tr>
    <tr>
        <th>Email Address: </th>
        <td><%= currentUser.emailAddress %></td>
    </tr>
    <tr>
        <th>Seniority Level: </th>
        <td><%= currentUser.level %></td>
    </tr>
    <tr>
        <th>Telephone: </th>
        <td>
        <% if(currentUser.telephone == null) { %>

            <a href="/profile/edit">Update Telephone</a>

        <% } else { %>

            <%= currentUser.telephone %>

        <% } %>
        </td>
    </tr>
    <tr>
        <th>Username: </th>
        <td>
        <% if(currentUser.userName == "") { %>

            <a href="/profile/edit">Update UserName</a>

        <% } else { %>

            <%= currentUser.userName %>

        <% } %>
        </td>
    </tr>

</table>


