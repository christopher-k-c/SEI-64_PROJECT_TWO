

<h2>Update Your Information </h2>


<form method="POST" action="/profile/update?_method=PUT">

    <div class="form-group">
       <label>First Name</label>
       <input name="firstName" type="text" value="<%= currentUser.firstName %>"  class="form-control"/> 
    </div>
    <div class="form-group">
        <label>Last Name</label>
        <input name="lastName" type="text" value="<%= currentUser.lastName %>"  class="form-control"/> 
    </div>
    <div class="form-group">
        <label>Job Title</label>
        <input name="jobTitle" type="text" value="<%= currentUser.jobTitle %>"  class="form-control"/> 
    </div>
    <!-- <div class="form-group">
        <label>Seniority Level</label>
        <input name="level" type="text" value="<%= currentUser.level %>"  class="form-control"/> 
    </div> -->
    <div class="form-group">
        <label>Email Address</label>
        <input name="emailAddress" type="text" value="<%= currentUser.emailAddress %>"  class="form-control"/> 
    </div>
    <div class="form-group">
        <label>Password</label>
        <input name="Password" type="text" value="Update Password"  class="form-control"/> 
    </div>
    <div class="form-group">
        <label>Telephone</label>
        <input name="telephone" type="text" value="<%= currentUser.telephone %>"  class="form-control"/> 
    </div>
    <div class="form-group">
        <label>User Name</label>
        <input name="userName" type="text" value="<%= currentUser.userName %>"  class="form-control"/> 
    </div>


    <input type="hidden" name="id" value="<%=currentUser._id%>" />
   
    <button type="submit">Update Account Information</button>

</form>

