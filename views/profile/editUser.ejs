

<h2>Edit User</h2>

<div class="user-detail-container">



    <form method="POST" action="/profile/updateUser?_method=PUT">
    
    
    
        <div class="form-group">
            <label>First Name</label>
            <input name="firstName" type="text" value="<%=profiles.firstName %>"  class="form-control"/> 
        </div>
        <div class="form-group">
            <label>Last Name</label>
            <input name="lastName" type="text" value="<%=profiles.lastName %>"  class="form-control"/> 
        </div>
        <div class="form-group">
            <label>Job Title</label>
            <input name="jobTitle" type="text" value="<%=profiles.jobTitle %>"  class="form-control"/> 
        </div>
        <div class="form-group">
            <label>Seniority Level</label>
            <input name="level" type="text" value="<%=profiles.level %>"  class="form-control"/> 
        </div>
        <div class="form-group">
            <label>Email Address</label>
            <input name="emailAddress" type="text" value="<%=profiles.emailAddress %>"  class="form-control"/> 
        </div>
        <div class="form-group">
            <label>Password</label>
            <input name="password" type="text" value="******************"  class="form-control"/> 
        </div>
        <div class="form-group">
            <label>Telephone</label>
            <input name="telephone" type="text" value="<%=profiles.telephone %>"  class="form-control"/> 
        </div>
        <div class="form-group">
            <label>Username</label>
            <input name="userName" type="text" value="<%=profiles.userName %>"  class="form-control"/> 
        </div>
        
        
    
        <input type="hidden" name="id" value="<%=profiles._id%>" />

        <button type="submit">Update User Info</button>


    </form>


</div>